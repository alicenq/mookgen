{
    "include": [
        "src/ts/**/**.ts"
    ],
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES5",
        "module": "ES5",
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "dist/js",
        "rootDir": "src/ts",
        "removeComments": true,
        "forceConsistentCasingInFileNames": true
    }
}